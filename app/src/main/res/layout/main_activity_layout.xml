<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/main_activity_location_ip_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="192.168.68.56:49999" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/main_activity_location_ip_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VideoPlayer"
                android:id="@+id/main_activity_goto_video_player_btn"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="锁屏"
                android:id="@+id/main_activity_lock_screen_btn"
                android:textSize="36sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="16dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button"
                android:layout_gravity="center"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>